<h1 class="page_header">Add A Hashtag</h1>
<form class="col s12">
  <div class="row">
    <div class="input-field col s12 flex_row">
      <textarea
        placeholder="Search for a Hashtag"
        class="materialize-textarea"
        id="searchInput"
      ></textarea>

      <button id="searchBtn" class="btn save_btn material-icons save_icon">search</button>

    </div>
  </div>
<div class="sub_container">
  {{#each hashtags as |hashtag|}}
    <div class="flex_row">
      <p class="hashtag_text">#{{hashtag}}</p>
      <div class="saveButtonDiv" data-hashtag="{{hashtag}}">
        <button
          class="btn save_btn dropdown-trigger"
          id="{{@index}}"
          data-hashtag="{{hashtag}}"
          data-target="dropdown1"
        ><i
            data-hashtag="{{hashtag}}"
            class="material-icons save_icon"
          >save</i></button>
      </div>
    </div>
  {{/each}}
</div>

<!-- When User clicks on the save icon, then it shows a dropdown list of the user's saved niches -->
<ul id="dropdown1" class="dropdown-content">
  {{#each niches as |niche|}}
    <li id="{{niche_id}}"><a
        class="niche"
        id="{{niche_id}}"
      >{{niche_name}}</a></li>
  {{/each}}
</ul>
</form>

<!-- Save Options Dropdown -->
<script>
  document.addEventListener('DOMContentLoaded', function() { var elems =
  document.querySelectorAll('.dropdown-trigger'); var instances =
  M.Dropdown.init(elems); });
</script>

<script src="/js/add-hashtags.js"></script>